{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2018",
      "esnext"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "types": ["vitest/globals"]
  },
  "exclude": [
    "*/tests/*"
  ]
}
